generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model GenCount {
    id        String   @id @default(cuid())
    count     Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model PGame {
    id            String     @id @default(cuid())
    igdbId        Int        @unique
    name          String
    image         String
    rating        Float
    genres        String[]
    platforms     PLATFORM[]
    releaseDate   String
    favoriteCount Int        @default(0)
    createdAt     DateTime   @default(now())
    updatedAt     DateTime   @updatedAt
}

enum PLATFORM {
    PC
    PLAYSTATION
    XBOX
    NINTENDO
}
