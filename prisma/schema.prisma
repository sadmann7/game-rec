generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model PGame {
    id             String   @id @default(cuid())
    name           String
    description    String
    image          String
    avgRating      Float
    avgRatingCount Int
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}
