generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model GenCount {
    id        String   @id @default(cuid())
    count     Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model PGame {
    id             String    @id @default(cuid())
    igdbId         Int       @unique
    name           String
    description    String
    image          String
    avgRating      Float
    avgRatingCount Int
    gameMode       GAME_MODE
    genres         String[]
    platforms      String[]
    developer      String
    trailerId      String
    releaseDate    String
    favoriteCount  Int       @default(0)
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
}

enum GAME_MODE {
    SINGLE_PLAYER
    MULTIPLAYER
}
